<h1>Fullness: @ViewBag.dachi.fullness</h1>
<h1>Energy: @ViewBag.dachi.energy</h1>
<h1>Meals: @ViewBag.dachi.meals</h1>
<h1>Happiness: @ViewBag.dachi.happiness</h1>

@{
    if(ViewBag.dachi.alive){
        <form action ="/Dojodachi" method ="POST">
            <input type="submit" value="Feed" name="button">
        </form>

        <form action ="/Dojodachi" method ="POST">
            <input type="submit" value="Play" name="button">
        </form>

        <form action ="/Dojodachi" method ="POST">
            <input type="submit" value="Work" name="button">
        </form>

        <form action ="/Dojodachi" method ="POST">
            <input type="submit" value="Sleep" name="button">
        </form>
    }
    else{
        <form action ="/Dojodachi" method ="POST">
            <input type="submit" value="Reset" name="button">
        </form>        
    }
}