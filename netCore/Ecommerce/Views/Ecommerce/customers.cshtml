@model Ecommerce.Models.Customer

<form asp-controller="Ecommerce" asp-action="createCustomer" method="POST">
    <p>Name:<input type="text" name="name"></p>
    <span asp-validation-for="Customer"></span>
    <input type="submit" value="Add">
</form>

<table>
    <tr>
        <th>Customer Name:</th>
        <th>Date Created:</th>
        <th>Actions:</th>
    </tr>

    @{
        foreach(var customer in @ViewBag.customers){
            <tr>
                <td>@customer.name</td>
                <td>@customer.createdAt</td>
                <td><form action="/customers/@customer.id/destroy" method="POST">
                    <input type="submit" value="Remove">
                    </form>
                </td>
            </tr>
        }
    }
</table>